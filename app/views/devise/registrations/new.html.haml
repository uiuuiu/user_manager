= render "devise/shared/error_messages", resource: resource
%section.bg-gray-50.dark:bg-gray-900
  .flex.flex-col.items-center.justify-center.px-6.py-8.mx-auto.md:h-screen.lg:py-0
    %a.flex.items-center.mb-6.text-2xl.font-semibold.text-gray-900.dark:text-white{:href => "#"}
      %img.w-8.h-8.mr-2{:alt => "logo", :src => "https://flowbite.s3.amazonaws.com/blocks/marketing-ui/logo.svg"}/
      User Management
    .w-full.bg-white.rounded-lg.shadow.dark:border.md:mt-0.sm:max-w-md.xl:p-0.dark:bg-gray-800.dark:border-gray-700
      .p-6.space-y-4.md:space-y-6.sm:p-8
        %h1.text-xl.font-bold.leading-tight.tracking-tight.text-gray-900.md:text-2xl.dark:text-white
          Sign up
        = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { "data-controller" => "login", class: "space-y-4 md:space-y-6"}) do |f|
          %div
            = login_page_label for: "email" do
              Your email
            = login_page_input f, :email, html_id: "email", html_class: "p-2.5", :placeholder => "name@company.com", :type => "email",
              "data-login-target" => "email"
          %div
            = login_page_label for: "password" do
              Password
            = login_page_input f, :password, html_id: "password", html_class: "p-2.5", :placeholder => "••••••••", :required => "", :type => "password",
              "data-login-target" => "password"
          %div
            = login_page_label for: "password_confirmation" do
              Password confirmation
            = login_page_input f, :password_confirmation, html_id: "password_confirmation", html_class: "p-2.5", :placeholder => "••••••••", :required => "", :type => "password",
              "data-login-target" => "password_confirmation"
          %div
            = login_page_label for: "first_name" do
              First name
            = login_page_input f, :first_name, html_id: "first_name", html_class: "p-2.5", :placeholder => "ex: Jimmy",
              "data-login-target" => "first_name"
          %div
            = login_page_label for: "last_name" do
              Last name
            = login_page_input f, :last_name, html_id: "last_name", html_class: "p-2.5", :placeholder => "ex: Pham",
              "data-login-target" => "last_name"
          = login_page_submit(f, :html_class => "py-2.5", :type => "submit", "data-action" => "click->login#login") do
            Sign up
          %p.text-sm.font-light.text-gray-500.dark:text-gray-400
            Already have an account?
            %a.font-medium.text-primary-600.hover:underline.dark:text-primary-500{:href => "/users/sign_in"} Sign In

